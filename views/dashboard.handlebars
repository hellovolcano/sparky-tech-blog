<div class="new-post-link">
    <a href="/dashboard/new-post">Add new post</a>
</div>
{{#if posts.length }}
<section>
    <h2>Your Posts</h2>
    <div>
        {{#each posts as |post|}}
        <div class="dashboard-post">
            <h3>
                {{post.title}} (<a href="/post/{{post.id}}" class="edit-link">view</a> | <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit</a>)
            </h3>
            <p>
                {{format_date this.created_at}}
            </p>
        </div>    
        {{/each}}
    </div>
</section>
{{/if}}